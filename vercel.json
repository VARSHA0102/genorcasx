{
  "version": 2,
  "builds": [
    {
      "src": "client/index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }   // âœ… top-level dist folder
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },       // static assets first
    { "src": "/api/(.*)", "dest": "server/index.ts" },     // API routes
    {
      "src": "/(.*)",                                      // SPA fallback
      "has": [{ "type": "header", "key": "accept", "value": "text/html" }],
      "dest": "/index.html"
    }
  ],
  "env": { "NODE_ENV": "production" }
}
